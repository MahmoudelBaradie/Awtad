<odoo>
    <record id="view_real_estate_account_config_tree" model="ir.ui.view">
        <field name="name">real.estate.account.config.tree</field>
        <field name="model">real.estate.account.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="company_id"/>
                <field name="journal_id"/>
            </list>
        </field>
    </record>
    <record id="view_real_estate_account_config_form" model="ir.ui.view">
        <field name="name">real.estate.account.config.form</field>
        <field name="model">real.estate.account.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="journal_id"/>
                    </group>
                    <group string="Key Accounts" col="2">
                        <field name="land_asset_account_id"/>
                        <field name="wip_account_id"/>
                        <field name="inventory_account_id"/>
                        <field name="investment_property_account_id"/>
                        <field name="cost_of_sales_account_id"/>
                        <field name="sales_revenue_account_id"/>
                        <field name="rental_revenue_account_id"/>
                        <field name="security_deposit_account_id"/>
                        <field name="retention_payable_account_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_real_estate_account_config" model="ir.actions.act_window">
        <field name="name">Accounting Setup</field>
        <field name="res_model">real.estate.account.config</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
