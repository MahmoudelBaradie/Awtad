<odoo>
    <record id="module_category_awtad_parking" model="ir.module.category">
        <field name="name">AWTAD PARKING</field>
        <field name="sequence">30</field>
    </record>

    <record id="group_awtad_parking_admin" model="res.groups">
        <field name="name">AWTAD Parking Admin</field>
        <field name="category_id" ref="module_category_awtad_parking"/>
        <field name="implied_ids" eval="[(4, ref('base.group_system'))]"/>
    </record>

    <record id="group_awtad_client_admin" model="res.groups">
        <field name="name">AWTAD Client Admin</field>
        <field name="category_id" ref="module_category_awtad_parking"/>
    </record>

    <record id="group_awtad_security_role" model="res.groups">
        <field name="name">AWTAD Security Role</field>
        <field name="category_id" ref="module_category_awtad_parking"/>
    </record>

    <record id="rule_client_admin_access_card" model="ir.rule">
        <field name="name">Client Admin - Access Card by Client</field>
        <field name="model_id" ref="model_maj_access_card"/>
        <field name="groups" eval="[(4, ref('group_awtad_client_admin'))]"/>
        <field name="domain_force">[('client_id', '=', user.maj_client_id.id)]</field>
    </record>

    <record id="rule_client_admin_parking" model="ir.rule">
        <field name="name">Client Admin - Parking by Client</field>
        <field name="model_id" ref="model_maj_parking"/>
        <field name="groups" eval="[(4, ref('group_awtad_client_admin'))]"/>
        <field name="domain_force">[('client_id', '=', user.maj_client_id.id)]</field>
    </record>

    <record id="rule_client_admin_client" model="ir.rule">
        <field name="name">Client Admin - Own Client</field>
        <field name="model_id" ref="model_maj_client"/>
        <field name="groups" eval="[(4, ref('group_awtad_client_admin'))]"/>
        <field name="domain_force">[('id', '=', user.maj_client_id.id)]</field>
    </record>

    <record id="rule_security_role_access_card" model="ir.rule">
        <field name="name">Security - Access Card by Client</field>
        <field name="model_id" ref="model_maj_access_card"/>
        <field name="groups" eval="[(4, ref('group_awtad_security_role'))]"/>
        <field name="domain_force">['|', ('client_id', '=', user.maj_client_id.id), ('client_id', '=', False)]</field>
    </record>

    <record id="rule_security_role_parking" model="ir.rule">
        <field name="name">Security - Parking by Client</field>
        <field name="model_id" ref="model_maj_parking"/>
        <field name="groups" eval="[(4, ref('group_awtad_security_role'))]"/>
        <field name="domain_force">['|', ('client_id', '=', user.maj_client_id.id), ('client_id', '=', False)]</field>
    </record>
</odoo>
