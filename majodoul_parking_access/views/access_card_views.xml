<odoo>
    <record id="view_maj_access_card_tree" model="ir.ui.view">
        <field name="name">maj.access.card.tree</field>
        <field name="model">maj.access.card</field>
        <field name="arch" type="xml">
            <list>
                <field name="card_code"/>
                <field name="employee_name"/>
                <field name="client_id"/>
                <field name="unit_id"/>
                <field name="expiry_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_maj_access_card_search" model="ir.ui.view">
        <field name="name">maj.access.card.search</field>
        <field name="model">maj.access.card</field>
        <field name="arch" type="xml">
            <search>
                <field name="card_code"/>
                <field name="employee_name"/>
                <field name="client_id"/>
                <filter string="Active" name="active_cards" domain="[('state','=','active')]"/>
                <group expand="0" string="Group By">
                    <filter string="Client" name="group_client" context="{'group_by':'client_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_maj_access_card_form" model="ir.ui.view">
        <field name="name">maj.access.card.form</field>
        <field name="model">maj.access.card</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_set_issued" string="Issue" type="object" invisible="state != 'draft'"/>
                    <button name="action_set_active" string="Activate" type="object" invisible="state != 'issued'"/>
                    <button name="action_set_expired" string="Expire" type="object" invisible="state not in ('issued','active')"/>
                    <button name="action_set_cancelled" string="Cancel" type="object" invisible="state == 'cancelled'"/>
                    <button name="action_reset_draft" string="Reset Draft" type="object" invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,issued,active,expired,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group string="Card Info">
                            <field name="name"/>
                            <field name="card_code" readonly="1"/>
                            <field name="card_number"/>
                            <field name="card_level"/>
                        </group>
                        <group string="Employee Info (Master Identity)">
                            <field name="employee_name"/>
                            <field name="employee_mobile"/>
                            <field name="employee_email"/>
                            <field name="employee_internal_no"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="unit_id"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                            <field name="issued_date"/>
                            <field name="expiry_date"/>
                            <field name="received_date"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_maj_access_card" model="ir.actions.act_window">
        <field name="name">Access Cards</field>
        <field name="res_model">maj.access.card</field>
        <field name="view_mode">list,form,graph,pivot</field>
        <field name="search_view_id" ref="view_maj_access_card_search"/>
        <field name="context">{'search_default_active_cards': 1}</field>
    </record>
</odoo>
